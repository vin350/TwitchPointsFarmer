<Window x:Class="TwitchPointsFarmer.Components.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchPointsFarmer.Components"
        mc:Ignorable="d"
        Title="InputWindow" MinHeight="180" MinWidth="250" Height="180" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleTextBox" Grid.Row="0" Text="TestValue" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="20" FontFamily="Arial"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" VerticalAlignment="Center"
                 Margin="5" FontSize="20" FontFamily="Arial"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="OkButton" Content="Ok" Padding="5,2"
                    Margin="5" FontFamily="Arial" FontSize="20"/>
            <Button x:Name="CancelButtton" Content="Cancel" Padding="5,2"
                    Margin="5" FontFamily="Arial" FontSize="20"/>
        </StackPanel>
        
    </Grid>
</Window>
